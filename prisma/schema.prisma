generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @unique
  username String?
  email    String  @unique
  password String
}

model ContentImg {
  id     Int    @id @default(autoincrement())
  title  String
  url    String
  blogId Int
  blog   Blog   @relation(fields: [blogId], references: [id])

  @@index([blogId], map: "ContentImg_blogId_fkey")
}

model ContentParagraph {
  id          Int    @id @default(autoincrement())
  text        String @db.VarChar(255)
  paragraphOf Int
  blogId      Int
  blog        Blog   @relation(fields: [blogId], references: [id])

  @@index([blogId], map: "ContentParagraph_blogId_fkey")
}

model Blog {
  id          Int                @id @default(autoincrement())
  title       String
  description String
  images      ContentImg[]
  paragraph   ContentParagraph[]
}

model Project {
  id    Int    @id @default(autoincrement())
  title String
  image String
  url   String
}

model File {
  id Int @id @default(autoincrement())
  filename String
  path String
}